    "lint:fix": "eslint ./src --fix",
    "ts:check": "tsc --noEmit"
  },
  "dependencies": {
    "@slack/bolt": "^3.17.1",
    "dayjs": "^1.11.10",
    "mongodb": "^6.3.0",
    "rustic-error": "^0.2.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@bluzzi/eslint-config": "^1.1.0",
    "@swc-node/register": "^1.6.8",
    "@swc/core": "^1.3.91",
    "@types/node": "^20.8.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "nodemon": "^3.0.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "extends": "@bluzzi",
    "rules": {
      "camelcase": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
